{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build OpenGL Project",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "-std=c++17",
        "-IC:/Users/User/Desktop/openglGravity/include",     // full include path
        "src/main.cpp",
        "src/glad.c",
        "-LC:/Users/User/Desktop/openglGravity/lib",         // full lib path
        "-lglfw3dll",
        "-lopengl32",
        "-o",
        "main.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Run Executable",
      "type": "shell",
      "command": "./main.exe",
      "dependsOn": "Build OpenGL Project",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    }
  ]
}
